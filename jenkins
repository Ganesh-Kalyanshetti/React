pipeline
{
	agent any
	environment
	{
		DOCKER_CREDENTIALS = credentials('dockerhostid') 
		DOCKERIMAGE = 'ganesh021/rectapp'
	}
	stages
	{
		stage('Git link')
		{
			steps
			{
				git branch : main , url : 'https://github.com/Ganesh-Kalyanshetti/React.git'
			}
		}
		stage('Create docker image')
		{
			steps{
			
			script{
			
			dockerimg= docker.build('${DOCKERIMAGE}:latest')
			}
			}
		}
		stage('push to dockerhub')
		{
			steps{
			script
				{
					docker.withRegistry('https://index.docker.io/v1/',"dockerhostid")
				{
					dockerimg.push()
				}
			}
			}
		}
	}
	post
	{
		success{
			echo "completed"
		}
		failure
		{
			echo "Failed"
		}
	}
}
